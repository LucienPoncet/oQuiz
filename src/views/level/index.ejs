<%- include("../partials/header") %>

<main class="container py-4">
  
    <h1 class="my-3">Tous les niveaux</h1>
  
    <ul>
  
      <% for (const level of levels){ %>
      <li>
        <span class="badge bg-info p-3"><%=level.name%></span>
        <a class="btn btn-outline-info py-0 px-1 ms-3 fs-6 text-decoration-none" href="/levels/edit/<%=level.id%>">Ã‰DITER</a>
        <a class="btn btn-outline-danger py-0 px-1 ms-3 fs-6" href="/levels/remove/<%=level.id%>">SUPPRIMER</a>
      </li>
      <% } %>
  
  
    </ul>
  
    <h1 class="my-4">Ajouter un niveau</h1>
  
    <form class="mb-5" action="/levels/add" method="POST">
      <label class="form-label" for="name">Nom du niveau</label>
      <input class="form-control" type="text" name="name" id="name" required>
      <input class="btn btn-primary mt-3" type="submit" value="Ajouter le niveau">
    </form>
  
  </main>
  
  <%- include("../partials/footer") %>