<%- include("../partials/header") %>

  <main class="container py-4">
    
    <!-- Welcome -->
    <div class="text-center">
      <h2 class="h1 my-4">Bienvenue sur O'Quiz</h2>
      <p class="lead">Choisir un quiz :</p>
    </div>

    <!-- Cards -->
    <div class="row mb-3 text-center flew-wrap">

        <!-- One card -->
        <% quizzes.forEach (quiz => { %>   
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h2"><%=quiz.title%></h3>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h4 class="h3"><%=quiz.description%></h4>
                    <p>par <%=quiz.author.lastname%> <%=quiz.author.firstname%></p>
                    <ul class="list-unstyled mb-4 p-0">
                        <% quiz.tags.forEach (elementTag => { %>

                            <a href="/tags#tag<%=elementTag.id%>"></a><li class="badge bg-primary"><%=elementTag.name%></li></a>

                        <% }) %>
                    </ul>
                    <% if (locals.loggedInUser){ %>
                     <a href="/quiz/<%=quiz.id%>" class="btn btn-lg btn-primary text-white">Jouer</a> 
                     <% }else{ %>
                        <a href="/login" class="btn btn-lg btn-primary text-white">Se connecter pour jouer</a> 
                        <% } %>
                </div>
            </div>
        </div>
        <% }) %>
       

<%- include("../partials/footer") %>

