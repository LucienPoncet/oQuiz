<%- include("../partials/header") %>

<main class="container py-4">

    <h1 class="text-center m-2"><%= quiz.title %> </h1>
  
    <h2 class="text-center m-2"><%= quiz.description%></h1>
  
    <h2 class="small text-end">Par <%= quiz.author.lastname%> <%= quiz.author.firstname%></h2>
  
    <h2 class="small text-end">Date de création : <%= quiz.formatedDate %></h2>
  
    <h3>Thèmes</h3>
    <ul class="mb-4 p-0">
      <% for (const tag of quiz.tags){ %>
      <li class="badge bg-primary"><%=tag.name%></li>
      <% } %>
    </ul>
  
    <h3>Questions</h3>
  
    <% for (const question of quiz.questions){ %>
      <span class="badge bg-info"><%=question.level.name%></span>
      <p class="fw-bold mb-1"><%=question.description%></p>
      <div class="mb-3 ms-2">
        <% for (const proposition of question.propositions){ %>
        <div>
          <input type="radio" id="proposition_<%= proposition.id%>" name="answer_question_<%=question.id%>" value="#">
          <label for="proposition_<%= proposition.id%>"><%=proposition.description%></label>
        </div>
        <% } %>
      </div>
      <p class="fst-italic text-secondary"><%=question.anecdote%></p>
      <% } %>
    
    <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>
  </main>

  <%- include("../partials/footer") %>
  